@model PaymobFormViewModel

@if (Model != null)
{
<div class="tab-pane" id="Paymob" role="tabpanel">
    <form class="form-horizontal" asp-action="AddPaymobPaymentMethod" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CurrencyId"/>
        <input type="hidden" asp-for="Pm" />
        <input type="hidden" asp-for="PaymentMethodId" />
        <div class="form-group row">
            <label asp-for="ApiKey" class="col-sm-2 col-form-label">Api key</label>
            <div class="col-sm-10">
                <input type="text"  class="form-control" asp-for="ApiKey" placeholder="api key">
                <span asp-validation-for="ApiKey" class="text-danger"></span>
            </div>
        </div>
       
          <div class="form-group row">
            <label asp-for="IntegrationId" class="col-sm-2 col-form-label">Integration Id</label>
            <div class="col-sm-10">
                <input  class="form-control" asp-for="IntegrationId" placeholder="integration id">
                <span asp-validation-for="IntegrationId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Hmac" class="col-sm-2 col-form-label">Hmac</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Hmac" placeholder="Hmac">
                <span asp-validation-for="Hmac" class="text-danger"></span>
            </div>
        </div>
         <div class="form-group row">
            <label asp-for="IFrameId" class="col-sm-2 col-form-label">IFrame</label>
            <div class="col-sm-10">
                <input  class="form-control" asp-for="IFrameId" placeholder="IframeId">
                <span asp-validation-for="IFrameId" class="text-danger"></span>
            </div>
        </div>

           <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">status</label>
            <div class="col-sm-10">
              <select class="form-control select2" asp-for="Status" style="width:100%;">
                  <option value="">Select Status</option>
                  <option value="Active">Active</option>
                  <option value="Inactive">Inactive</option>
              </select>
              <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-info">Save</button>
        <button type="submit" class="btn btn-default float-right">Cancel</button>

    </form>
</div>
}