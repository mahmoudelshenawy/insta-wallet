
@model StripFormViewModel

@if(Model != null) {
<div class="tab-pane @(Model.Pm != null && Model.Pm == "Strip" ? "active" : "")" id="Strip" role="tabpanel">
    <form class="form-horizontal" asp-action="AddStripPaymentMethod" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CurrencyId"/>
        <input type="hidden" asp-for="Pm" />
        <input type="hidden" asp-for="PaymentMethodId" />
        <div class="form-group row">
            <label asp-for="SecretKey" class="col-sm-2 col-form-label">secret key</label>
            <div class="col-sm-10">
                <input type="text"  class="form-control" asp-for="SecretKey" placeholder="scret key">
                <span asp-validation-for="SecretKey" class="text-danger"></span>
            </div>
        </div>
       
          <div class="form-group row">
            <label asp-for="PublishableKey" class="col-sm-2 col-form-label">publishable key</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="PublishableKey" placeholder="publishable key">
                <span asp-validation-for="PublishableKey" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="ProcessingTime" class="col-sm-2 col-form-label">processing times(days)</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="ProcessingTime" placeholder="processing times(days)">
                <span asp-validation-for="ProcessingTime" class="text-danger"></span>
            </div>
        </div>
           <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">status</label>
            <div class="col-sm-10">
              <select class="form-control select2" asp-for="Status">
                  <option value="">Select Status</option>
                  <option value="Active">Active</option>
                  <option value="Inactive">Inactive</option>
              </select>
              <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>
          <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Activated for Methods</label>
            <div class="col-sm-10 select2-purple">
              <select class="select2" asp-for="ActivatedFor" multiple="multiple" 
                  data-dropdown-css-class="select2-purple" style="width: 100%;" 
                  data-placeholder="Select Payment methods">
                  <option value="Deposit">Deposit</option>
                  <option value="Withdrawal">Withdrawal</option>
              </select>
              <span asp-validation-for="ActivatedFor" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-info">Save</button>
        <button type="submit" class="btn btn-default float-right">Cancel</button>

    </form>
</div>
}