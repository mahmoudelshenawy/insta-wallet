@model FeesLimitFormViewModel

<form asp-action="AddFeeLimit" method="post" id="FeeLimitForm" asp-route-id="@Model.CurrencyId" asp-route-tType="@Model.tType">
<div class="card-body">
    <input type="hidden" asp-for="@Model.TransactionTypeId" />
    <input type="hidden" asp-for="@Model.CurrencyId" />
    <input type="hidden" asp-for="@Model.TypeToDisplay" />
    <input type="hidden" asp-for="@Model.TransactionType" />
    <input type="hidden" asp-for="@Model.tType" />
    <div class="form-group clearfix">
        <div class="icheck-primary d-inline">
            <input type="checkbox" id="checkboxPrimary1" asp-for="@Model.SingleForm.HasTransaction">
            <label for="checkboxPrimary1">
                Active
            </label>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.SingleForm.MinLimit" class=" col-form-label"></label>
        <div class="">
            <input class="form-control" asp-for="@Model.SingleForm.MinLimit">
            <span asp-validation-for="@Model.SingleForm.MinLimit" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.SingleForm.MaxLimit" class=" col-form-label"></label>
        <div class="">
            <input class="form-control" asp-for="@Model.SingleForm.MaxLimit">
            <span asp-validation-for="@Model.SingleForm.MaxLimit" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.SingleForm.FixedAmount" class=" col-form-label"></label>
        <div class="">
            <input class="form-control" asp-for="@Model.SingleForm.FixedAmount">
            <span asp-validation-for="@Model.SingleForm.FixedAmount" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.SingleForm.PercentAmount" class=" col-form-label"></label>
        <div class="">
            <input class="form-control" asp-for="@Model.SingleForm.PercentAmount">
            <span asp-validation-for="@Model.SingleForm.PercentAmount" class="text-danger"></span>
        </div>
    </div>

</div>
 <div class="mt-3 justify-content-between">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
</form>