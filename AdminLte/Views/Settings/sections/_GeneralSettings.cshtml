@model GeneralSettingsViewModel

@if (Model != null)
{
    <div class="tab-pane" id="general" role="tabpanel">
        <form class="form-horizontal" asp-action="AddGeneralSettingData" asp-route-tab="@Model.Tab" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Tab" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="WebsiteName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="WebsiteName" placeholder="Website Name">
                    <span asp-validation-for="WebsiteName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="WhatsappNumber" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="WhatsappNumber" placeholder="Whatsapp Number">
                    <span asp-validation-for="WhatsappNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Logo" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="input-group">
                        <div class="custom-file">
                            <input asp-for="Logo" class="custom-file-input"
                               onchange="document.getElementById('Preview').src = window.URL.createObjectURL(this.files[0])" />
                            <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                        </div>
                    </div>
                    <img src='@(!string.IsNullOrEmpty(Model.LogoPath) ? Model.LogoPath : "/img/AdminLTELogo.png")' id="Preview" class="img-fluid mt-1" width="100" height="180" />
                </div>

            </div>
            <div class="form-group row">
                <label asp-for="Favicon" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="input-group">
                        <div class="custom-file">
                            <input asp-for="Favicon" class="custom-file-input"
                               onchange="document.getElementById('FaviconPreview').src = window.URL.createObjectURL(this.files[0])" />
                            <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                        </div>
                    </div>
                    <img src='@(!string.IsNullOrEmpty(Model.FaviconPath) ? Model.FaviconPath : "/img/AdminLTELogo.png")' id="FaviconPreview" class="img-fluid" width="40" height="40" />
                </div>

            </div>

            <div class="form-group row">
                <label asp-for="LoginVia" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select class="select2" style="width:100%;" asp-for="LoginVia">
                        <option value="emailOnly">email Only</option>
                        <option value="phoneOnly">phone Only</option>
                        <option value="emailOrPhone">email Or Phone</option>
                    </select>
                    <span asp-validation-for="LoginVia" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-info">Save</button>
            <button type="submit" class="btn btn-default float-right">Cancel</button>
        </form>
    </div>

}