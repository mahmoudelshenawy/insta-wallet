@model EditUserViewModel
@{
    ViewData["Title"] = "EditUser";
}

<div class="row">
    <div class="col-md-8 offset-2">
        @if(ViewBag.IsSuccess == true)
        {
            <div class="alert alert-success">user is Edited successfully</div>
        }
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Horizontal Form</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form class="form-horizontal" method="post">
                   <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body">
                    <div class="form-group row">
                        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="UserName" class="form-control" placeholder="User name">
                        </div>
                    </div>
                    <input type="hidden" asp-for="Id"/>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    <div class="form-group row">
                        <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="FirstName" class="form-control" placeholder="first name">
                        </div>
                    </div>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                    <div class="form-group row">
                        <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="LastName" class="form-control" placeholder="last name">
                        </div>
                    </div>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Email" class="form-control" placeholder="email">
                        </div>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-info">Save</button>
                    <a asp-action="UsersList" class="btn btn-default float-right">Cancel</a>
                </div>
                <!-- /.card-footer -->
            </form>
        </div>
    </div>
</div>

